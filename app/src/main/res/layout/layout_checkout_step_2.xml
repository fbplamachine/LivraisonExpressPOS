<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils"/>
        <variable
            name="receiver"
            type="com.israel.livraisonexpresspos.models.Contact"/>
        <variable
            name="receiverAddress"
            type="com.israel.livraisonexpresspos.models.Address" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:id="@+id/stepReceiver"
                android:background="@drawable/bg_round_blue"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/grey_10"
                android:minHeight="?attr/actionBarSize" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="center_vertical"
                android:onClick="onTitleClick"
                android:id="@+id/tvReceiverTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_90"
                android:text="@string/receiver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="vertical"
                android:id="@+id/layoutReceiver">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/receiver_contact" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_contact"
                        android:padding="@dimen/dp_4"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvImportReceiver"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fullName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{receiver != null ? receiver.fullname : ``}"
                        android:focusable="@{receiver != null ? receiver.fullname == null : true}"
                        android:id="@+id/etFullName" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:text="@{receiver != null ? receiver.telephone : ``}"
                            android:focusable="@{receiver != null ? receiver.telephone == null : true}"
                            android:id="@+id/etPhone1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="0dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{receiver != null ? receiver.telephone_alt : ``}"
                            android:focusable="@{receiver != null ? receiver.telephone_alt == null : true}"
                            android:id="@+id/etPhone2"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:text="@{receiver != null ? receiver.email : ``}"
                        android:focusable="@{receiver == null || TextUtils.isEmpty(receiver.email)}"
                        android:id="@+id/etEmail" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/receiver_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_list"
                        android:padding="@dimen/dp_4"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvImportReceiverAddress"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutNewAddress"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:id="@+id/etCity" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:endIconMode="none"
                        android:completionThreshold="3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_height="wrap_content"
                        android:hint="@string/quarter">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{receiverAddress != null ? receiverAddress.quartier : ``}"
                            android:focusable="@{receiverAddress == null || receiverAddress.quartier == null}"
                            android:focusableInTouchMode="@{receiverAddress == null || receiverAddress.quartier == null}"
                            android:id="@+id/etQuarter" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_description">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{receiverAddress != null ? receiverAddress.description : ``}"
                            android:focusable="@{receiverAddress == null || receiverAddress.description == null}"
                            android:focusableInTouchMode="@{receiverAddress == null || receiverAddress.description == null}"
                            android:id="@+id/etDescription" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:hint="@string/geolocation">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{receiverAddress != null ? receiverAddress.nom : ``}"
                            android:focusable="false"
                            android:id="@+id/etGeolocation" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbNewAddress"
                    android:text="@string/enter_new_address"
                    android:buttonTint="@color/colorAccent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_20" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:id="@+id/buttonReceiverNext"
                    android:text="@string/next"
                    android:onClick="onButtonClick" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
