<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sender"
            type="com.israel.livraisonexpresspos.models.Contact"/>
        <variable
            name="senderAddress"
            type="com.israel.livraisonexpresspos.models.Address" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/bg_round_blue"
                android:id="@+id/stepSender"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:background="@color/grey_10"
                android:layout_gravity="center"
                android:minHeight="?attr/actionBarSize" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_90"
                android:onClick="onTitleClick"
                android:text="@string/sender"
                android:id="@+id/tvSenderTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="vertical"
                android:id="@+id/layoutSender">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sender_contact" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_contact"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_4"
                        android:id="@+id/tvImportSender"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fullName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{sender != null ? sender.fullname : ``}"
                        android:focusable="@{sender != null ? sender.fullname == null : true}"
                        android:id="@+id/etSenderFullName" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:text="@{sender != null ? sender.telephone : ``}"
                            android:focusable="@{sender != null ? sender.telephone == null : true}"
                            android:id="@+id/etSenderPhone1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="0dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{sender != null ? sender.telephone_alt : ``}"
                            android:focusable="@{sender != null ? sender.telephone_alt == null : true}"
                            android:id="@+id/etSenderPhone2"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:text="@{sender != null ? sender.email : ``}"
                        android:focusable="@{sender != null ? sender.email == null : true}"
                        android:id="@+id/etSenderEmail" />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sender_address" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_list"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_4"
                        android:id="@+id/tvImportSenderAddress"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutSenderNewAddress"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:id="@+id/etSenderCity" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:endIconMode="none"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_height="wrap_content"
                        android:hint="@string/quarter">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:maxLines="1"
                            android:completionThreshold="3"
                            android:text="@{senderAddress != null ? senderAddress.quartier == null ? `` : senderAddress.quartier : ``}"
                            android:focusable="@{senderAddress == null || senderAddress.quartier == null}"
                            android:focusableInTouchMode="@{senderAddress == null || senderAddress.quartier == null}"
                            android:id="@+id/etSenderQuarter" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_description">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{senderAddress != null ? senderAddress.description == null ? `` : senderAddress.description : ``}"
                            android:focusable="@{senderAddress == null || senderAddress.description == null}"
                            android:focusableInTouchMode="@{senderAddress == null || senderAddress.description == null}"
                            android:id="@+id/etSenderDescription" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:hint="@string/geolocation">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:text="@{senderAddress != null ? senderAddress.nom == null ? `` : senderAddress.nom : ``}"
                            android:clickable="@{senderAddress == null || senderAddress.description == null || senderAddress.description == ``}"
                            android:id="@+id/etSenderGeolocation" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbSenderNewAddress"
                    android:text="@string/enter_new_address"
                    android:buttonTint="@color/colorAccent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_20" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:id="@+id/buttonSenderNext"
                    android:text="@string/next"
                    android:onClick="onButtonClick" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
