<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.israel.livraisonexpresspos.utils.CourseStatus"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="order"
            type="com.israel.livraisonexpresspos.models.from_steed_app.OrderSteed" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorPrimary"
                            android:layout_height="@dimen/dp_40">
                            <TextView
                                android:id="@+id/tv_course_number"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:padding="5dp"
                                android:gravity="center"
                                android:text="@{`N°: ` + order.infos.ref}"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16"
                                android:layout_centerInParent="true"
                                tools:text="N°: GAS-20210106-0001"/>
                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:layout_marginHorizontal="@dimen/dp_10"
                                android:src="@drawable/ic_round_more_vert_24"
                                android:id="@+id/ivMore"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#dddddd" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="5dp"
                                android:paddingVertical="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_calendar"
                                    app:tint="#555" />

                                <TextView
                                    android:id="@+id/tv_course_date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:layout_gravity="center"
                                    android:text="@{`A livrer le: ` + order.infos.date_livraison}"
                                    android:textColor="@color/grey_90" />
                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:src="@drawable/ic_round_edit_24"
                                    android:visibility="gone"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:layout_marginHorizontal="@dimen/dp_10"
                                    android:id="@+id/ivEditTime"
                                    app:tint="@color/grey_60" />
                            </LinearLayout>

                            <View
                                android:id="@+id/viewcode_promo"
                                android:layout_width="match_parent"
                                android:visibility="@{order.orders.code_promo == null ? View.GONE : View.VISIBLE}"
                                android:layout_height="1dp"
                                android:background="#dddddd" />

                            <LinearLayout
                                android:id="@+id/linearlayoutCode_promo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="@{order.orders.code_promo == null ? View.GONE : View.VISIBLE}"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_flag"
                                    app:tint="#555" />

                                <TextView
                                    android:id="@+id/tv_code_promo"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:layout_gravity="center"
                                    android:text="@{`Code promo` + order.orders.code_promo}"
                                    android:textColor="@color/grey_90" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#dddddd" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_flag"
                                    app:tint="#555" />

                                <TextView
                                    android:id="@+id/tv_course_status"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@{`Statut de la course: ` + order.infos.statut_human}"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:layout_gravity="center"
                                    android:textColor="@color/grey_90" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView_select_course_status"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@color/separator_grey"
                                    android:padding="@dimen/dp_5"
                                    android:elevation="@dimen/dp_2"
                                    android:layout_margin="@dimen/dp_2"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_round_more_vert_24"
                                        android:background="@color/grey_20"
                                        android:layout_gravity="center"
                                        app:tint="@color/grey_90"
                                        android:padding="@dimen/dp_5" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#dddddd" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/layoutDeliveryMan"
                                android:visibility="gone"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_delivery_man"
                                    app:tint="#555" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@{`Coursier: ` + order.infos.coursier_name}"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:layout_gravity="center"
                                    android:textColor="@color/grey_90" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/layoutShop"
                                android:visibility="@{TextUtils.isEmpty(order.orders.magasin) ? View.GONE : View.VISIBLE}"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_baseline_business_24"
                                    app:tint="#555" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@{`Magasin: ` + order.orders.magasin}"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:layout_gravity="center"
                                    android:textColor="@color/grey_90" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorPrimary"
                            android:padding="@dimen/dp_5"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_10"
                                android:layout_centerInParent="true"
                                android:text="Instructions additionnelles"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_add_24"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="@dimen/dp_5"/>
                        </RelativeLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:id="@+id/rvComments"/>
                        <TextView
                            android:id="@+id/tv_additional_instructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:visibility="gone"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:text="@{order.orders.commentaire == null || order.orders.commentaire.empty ? order.orders.description == null || order.orders.description.empty ? `` : order.orders.description : order.orders.commentaire}" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_3"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:background="@color/colorPrimary"
                            android:gravity="end|center"
                            android:paddingHorizontal="@dimen/dp_16"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:id="@+id/ivAdd"
                                android:visibility="gone"
                                app:tint="@color/white" />
                            <View
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="0dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_edit_24"
                                android:visibility="gone"
                                android:id="@+id/ivEdit"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_money"
                                app:tint="#555" />

                            <TextView
                                android:id="@+id/tv_course_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/dp_5"
                                android:layout_gravity="center"
                                android:text="@{`MTTC: ` + order.paiement.montant_total +  ` FCFA`}"
                                android:textColor="@color/grey_90" />

                        </LinearLayout>

                        <View
                            android:id="@+id/viewMontantAchat"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="@{order.orders.montant_achat == 0 ? View.GONE : View.VISIBLE}"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/linearlayoutAchat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="@{order.orders.montant_achat == 0 ? View.GONE : View.VISIBLE}"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_money"
                                app:tint="#555" />

                            <TextView
                                android:id="@+id/tv_course_buy_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/dp_5"
                                android:layout_gravity="center"
                                android:text="@{`Montant achant: ` + order.orders.montant_achat + ` FCFA`}"
                                android:textColor="@color/grey_90" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:id="@+id/lyt_livraison"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="@{order.infos.origin.equals(`marche-odoo`) ? View.GONE : View.VISIBLE}"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_money"
                                app:tint="#555" />

                            <TextView
                                android:id="@+id/tv_course_delivery_price"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/dp_5"
                                android:layout_gravity="center"
                                android:text="@{`Montant livraison: ` + order.orders.montant_livraison + ` FCFA`}"
                                android:textColor="@color/grey_90" />
                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:src="@drawable/ic_round_edit_24"
                                android:visibility="gone"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:layout_marginHorizontal="@dimen/dp_10"
                                android:id="@+id/ivEditDeliveryPrice"
                                app:tint="@color/grey_60" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_box"
                                app:tint="#555" />

                            <TextView
                                android:id="@+id/tv_course_object"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="5dp"
                                android:lineSpacingExtra="3dp"
                                android:text="@{order.infos.contenu}"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="#dddddd" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="100dp"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_3"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:paddingHorizontal="@dimen/dp_16"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Informations de paiement"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:paddingVertical="@dimen/dp_10"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Etat de paiement: "/>
                            <View
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Payée"
                                android:textColor="@color/grey_80"
                                android:text="@{order.paiement.date_paiment == null ? `Impayée` : `Payée`}"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:paddingVertical="@dimen/dp_10"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mode de paiement: "/>
                            <View
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Orange Momo"
                                android:textColor="@color/grey_80"
                                android:text="@{order.paiement.mode_paiment}"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="@{order.paiement.cashier.comment == null ? View.GONE : View.VISIBLE}"
                            android:background="@color/separator_grey" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_5"
                            android:visibility="@{order.paiement.cashier.comment == null ? View.GONE : View.VISIBLE}"
                            android:paddingVertical="@dimen/dp_10"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Note: "/>
                            <View
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Payée partielement"
                                android:textColor="@color/grey_80"
                                android:text="@{order.paiement.cashier.comment}"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

