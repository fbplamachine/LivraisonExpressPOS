<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isSetOrder"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.order_details.OrderDetailsActivity"
        android:background="@color/grey_5">

        <LinearLayout
            android:id="@+id/layoutTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent">
            <!--  manage to hide this actionBar on scrollDown and show on scrollTop-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="@dimen/dp_5"
                app:navigationIcon="@drawable/ic_arrow_back_white_24"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title="Coursier Express"
                app:titleTextColor="@color/white"
                app:menu="@menu/order_details_menu"/>

            <!--   end giving up -->

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="@dimen/dp_5"
                android:scrollbars="horizontal"
                app:tabBackground="@android:color/transparent"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="@dimen/dp_3"
                app:tabInlineLabel="true"
                app:tabMode="scrollable"
                app:tabTextColor="@color/white"/>
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{isSetOrder ? View.VISIBLE : View.GONE}"
            android:layout_below="@id/layoutTabs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTabs"
            tools:layout_editor_absoluteX="-60dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/progressBar"
            android:visibility="@{isSetOrder ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>