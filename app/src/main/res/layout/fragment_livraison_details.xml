<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_3"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Contacts"
                            android:textColor="@color/white"
                            android:padding="@dimen/dp_5"
                            android:textSize="@dimen/sp_16"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/row_contact_nom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_person_black_24"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_nom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_contact_nom_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_contact_telephone_recever"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_phone"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_telephone_recever"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/delivery_phone"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@color/separator_grey"
                                    android:padding="@dimen/dp_5"
                                    android:elevation="@dimen/dp_2"
                                    android:layout_margin="@dimen/dp_2"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_phone_forwarded_24"
                                        android:background="@color/grey_20"
                                        android:layout_gravity="center"
                                        app:tint="@color/grey_90"
                                        android:padding="@dimen/dp_5"/>

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/delivery_phone_message"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@color/separator_grey"
                                    android:padding="@dimen/dp_5"
                                    android:elevation="@dimen/dp_2"
                                    android:layout_margin="@dimen/dp_2"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_message_24"
                                        android:background="@color/grey_20"
                                        android:layout_gravity="center"
                                        app:tint="@color/grey_90"
                                        android:padding="@dimen/dp_5"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <View
                                android:id="@+id/row_contact_telephone_recever_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_contact_telephone_recever2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_phone"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_telephone_recever2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/delivery_phone2"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@color/separator_grey"
                                    android:padding="@dimen/dp_5"
                                    android:elevation="@dimen/dp_2"
                                    android:layout_margin="@dimen/dp_2"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_phone_forwarded_24"
                                        android:background="@color/grey_20"
                                        android:layout_gravity="center"
                                        app:tint="@color/grey_90"
                                        android:padding="@dimen/dp_5"/>

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/delivery_phone2_message"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:background="@color/separator_grey"
                                    android:padding="@dimen/dp_5"
                                    android:elevation="@dimen/dp_2"
                                    android:layout_margin="@dimen/dp_2"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_message_24"
                                        android:background="@color/grey_20"
                                        android:layout_gravity="center"
                                        app:tint="@color/grey_90"
                                        android:padding="@dimen/dp_5"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_3"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/block_adresse_recever"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <ImageView
                                android:id="@+id/ivAlert"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp_5"
                                android:text="Adresse "
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/row_adresses_recever_quartier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_location_city_black_24dp"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_quartier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90"/>

                            </LinearLayout>

                            <View
                                android:id="@+id/row_adresses_recever_quartier_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_adresses_recever_adresse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_address"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_adresse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_adresses_recever_adresse_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_adresses_recever_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_address"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bloc_more_adress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="@dimen/dp_5"
                                android:text="Autres adresses"
                                android:textAlignment="center"
                                android:textSize="@dimen/sp_16" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_bloc_adress_receiver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:scrollbars="none" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/more_adress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_5"
                                android:clickable="true"
                                android:elevation="@dimen/dp_2"
                                app:cardBackgroundColor="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/dp_2">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingRight="@dimen/dp_5">

                                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:animateLayoutChanges="true">

                                        <ImageView
                                            android:id="@+id/img_ic_more"
                                            android:layout_width="@dimen/dp_24"
                                            android:layout_height="@dimen/dp_24"
                                            android:src="@drawable/ic_add"
                                            android:visibility="visible"
                                            app:tint="@color/white" />


                                        <ImageView
                                            android:id="@+id/img_ic_less"
                                            android:layout_width="@dimen/dp_24"
                                            android:layout_height="@dimen/dp_24"
                                            android:src="@drawable/ic_round_remove_24"
                                            android:visibility="visible"
                                            app:tint="@color/white" />

                                        <ProgressBar
                                            android:id="@+id/progress_bar"
                                            android:layout_width="@dimen/dp_24"
                                            android:layout_height="@dimen/dp_24"
                                            android:layout_gravity="center"
                                            android:visibility="invisible"
                                            android:progressTint="@color/white"/>

                                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                                    <TextView
                                        android:id="@+id/tv_card_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/dp_5"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_3"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/block_geolocalisation_recever"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Géolocalisation "
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16"
                            android:padding="@dimen/dp_5"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/row_location_receve_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_location_recever_distance_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_location_recever_chrono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_chrono"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/separator_grey" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <!--   start handling the geolocalization part here  -->

        <TextView
            android:id="@+id/textview_add_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:layout_marginBottom="198dp"
            android:background="#616161"
            android:padding="8dp"
            android:text="Ajouter une adresse"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="190dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:pressedTranslationZ="12dp"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/textview_update_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:layout_marginBottom="148dp"
            android:background="#616161"
            android:padding="8dp"
            android:text="Mettre à jour l'adresse"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="140dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:pressedTranslationZ="12dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textview_localize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:layout_marginBottom="98dp"
            android:background="#616161"
            android:padding="8dp"
            android:text="Direction"
            android:textColor="#ffffff"
            android:visibility="invisible" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="90dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:pressedTranslationZ="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="16dp"
            android:focusable="true"
            android:visibility="visible"
            app:backgroundTint="#ffffff"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/ic_add"
            tools:ignore="VectorDrawableCompat" />

        <!--   end handling the géolocalization fab here  -->

    </RelativeLayout>

</LinearLayout>
