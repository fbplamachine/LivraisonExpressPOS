<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="address"
            type="com.israel.livraisonexpresspos.models.Address" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:backgroundTint="@color/terminee">
             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddressTitle"
            android:textColor="@color/overlay_dark_90"
            android:layout_marginBottom="@dimen/dp_5"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddressQuartier"
            android:textColor="@color/overlay_dark_90"
            android:layout_marginBottom="@dimen/dp_5"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddressNom"
            android:textColor="@color/overlay_dark_90"
            android:layout_marginBottom="@dimen/dp_5"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddressDescription"
            android:textColor="@color/overlay_dark_90"
             android:layout_marginBottom="@dimen/dp_5"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:backgroundTint="@color/grey_80"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
