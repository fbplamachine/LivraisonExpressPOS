<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="contact"
            type="com.israel.livraisonexpresspos.models.from_steed_app.Client" />
        <variable
            name="address"
            type="com.israel.livraisonexpresspos.models.Address" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_5"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_3"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Contacts"
                        android:textColor="@color/white"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/separator_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/row_contact_nom"
                            android:layout_width="match_parent"
                            android:visibility="@{contact.fullname == null || contact.fullname.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_person_black_24"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_nom"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@{contact.fullname ?? ``}"
                                android:layout_marginStart="@dimen/dp_10"
                                android:textColor="@color/grey_90" />

                        </LinearLayout>

                        <View
                            android:id="@+id/row_contact_nom_divider"
                            android:layout_width="match_parent"
                            android:visibility="@{contact.fullname == null || contact.fullname.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/row_contact_telephone_client"
                            android:visibility="@{contact.telephone == null || contact.telephone.empty ? View.GONE : View.VISIBLE}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_phone"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_telephone_client"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@{contact.telephone ?? ``}"
                                android:textColor="@color/grey_90" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/client_phone"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_phone_forwarded_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/delivery_phone_message"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_message_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <View
                            android:id="@+id/row_contact_telephone_client_divider"
                            android:layout_width="match_parent"
                            android:visibility="@{contact.telephone == null || contact.telephone.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/row_contact_telephone_client2"
                            android:layout_width="match_parent"
                            android:visibility="@{contact.telephone_alt == null || contact.telephone_alt.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_phone"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_telephone_client2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@{contact.telephone_alt ?? ``}"
                                android:textColor="@color/grey_90" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/client_phone2"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_phone_forwarded_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/delivery_phone2_message"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_message_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <View
                            android:id="@+id/row_contact_telephone_client2_divider"
                            android:layout_width="match_parent"
                            android:visibility="@{contact.telephone_alt == null || contact.telephone_alt.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/row_contact_Email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{contact.email == null || contact.email.empty ? View.GONE : View.VISIBLE}"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_email"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="0dp"
                                android:text="@{contact.email ?? ``}"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:textColor="@color/grey_90" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_phone_forwarded_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:background="@color/separator_grey"
                                android:padding="@dimen/dp_5"
                                android:elevation="@dimen/dp_2"
                                android:layout_margin="@dimen/dp_2"
                                android:layout_gravity="center"
                                app:cardCornerRadius="@dimen/dp_5"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_message_24"
                                    android:background="@color/grey_20"
                                    android:layout_gravity="center"
                                    app:tint="@color/grey_90"
                                    android:padding="@dimen/dp_5" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="@{address == null ? View.GONE : View.VISIBLE}"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_3"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/block_adresse_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/ivAlert"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:text="Adresse "
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/separator_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/row_adresses_client_quartier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{address.quartier == null || address.quartier.empty ? View.GONE : View.VISIBLE}"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_location_city_black_24dp"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_quartier"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@{address.quartier ?? ``}"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:textColor="@color/grey_90" />

                        </LinearLayout>

                        <View
                            android:id="@+id/row_adresses_client_quartier_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="@{address.quartier == null || address.quartier.empty ? View.GONE : View.VISIBLE}"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/row_adresses_client_adresse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{address.nom == null || address.nom.empty ? View.GONE : View.VISIBLE}"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_address"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_adresse"
                                android:layout_width="0dp"
                                android:text="@{address.nom ?? ``}"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:textColor="@color/grey_90" />

                        </LinearLayout>

                        <View
                            android:id="@+id/row_adresses_client_adresse_divider"
                            android:layout_width="match_parent"
                            android:visibility="@{address.nom == null || address.nom.empty ? View.GONE : View.VISIBLE}"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:id="@+id/row_adresses_client_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{address.description == null || address.description.empty ? View.GONE : View.VISIBLE}"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_address"
                                app:tint="@color/order_detail_icon_tint" />

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="0dp"
                                android:text="@{address.description ?? ``}"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1"
                                android:textColor="@color/grey_90" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bloc_more_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/dp_5"
                            android:text="Autres adresses"
                            android:textAlignment="center"
                            android:textSize="@dimen/sp_16" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_bloc_adress_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:scrollbars="none" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/more_adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:clickable="true"
                            android:elevation="@dimen/dp_2"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/dp_2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5">

                                <androidx.coordinatorlayout.widget.CoordinatorLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:animateLayoutChanges="true">

                                    <ImageView
                                        android:id="@+id/img_ic_more"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@drawable/ic_add"
                                        android:visibility="visible"
                                        app:tint="@color/white" />


                                    <ImageView
                                        android:id="@+id/img_ic_less"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@drawable/ic_round_remove_24"
                                        android:visibility="visible"
                                        app:tint="@color/white" />

                                    <ProgressBar
                                        android:id="@+id/progress_bar"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_gravity="center"
                                        android:visibility="invisible"
                                        android:progressTint="@color/white" />

                                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                                <TextView
                                    android:id="@+id/tv_card_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/dp_5"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</layout>
