<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="move"
            type="com.israel.livraisonexpresspos.models.inventory_management_models.Move" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.inventory_management.move_details.MoveDetailsFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/move_details"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/add_move_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/dp_10"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:background="@color/grey_10"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_info"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_15"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Infos"
                            android:background="@color/colorPrimary"
                            android:drawablePadding="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:textSize="20sp"
                            app:drawableTint="@color/white"
                            android:drawableStart="@drawable/ic_inventory_24"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="@dimen/dp_5"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_sites"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/view">

                                <TextView
                                    android:id="@+id/tv_departure_site"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:hint="Site de depart"
                                    android:text="@{move.site_depart.name}"
                                    android:paddingHorizontal="@dimen/dp_0"
                                    android:textColor="@color/grey_90"
                                    android:textSize="@dimen/sp_15"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/imgV_arrow"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/imgV_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dp_10"
                                    android:src="@drawable/ic_arrow_forward_black_24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/tv_arrival_site"
                                    app:layout_constraintStart_toEndOf="@id/tv_departure_site"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tint="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tv_arrival_site"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:hint="Site d'arrivÃ©e"
                                    android:text="@{move.site_arrivee.name}"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:textColor="@color/grey_90"
                                    android:textSize="@dimen/sp_15"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/imgV_arrow"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@color/overlay_dark_10" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_person_black_24"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:tint="@color/grey_40" />

                                <TextView
                                    android:id="@+id/tv_product"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:text="@{move.gestionnaire.fullname}"
                                    tools:text="Super admin muticanalservices"
                                    android:textSize="@dimen/sp_15"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:textColor="@color/grey_90"
                                    app:layout_constraintStart_toEndOf="@id/icon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <View
                                android:id="@+id/view2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginVertical="@dimen/dp_5"
                                android:background="@color/overlay_dark_10"
                                app:layout_constraintTop_toBottomOf="@id/tv_product"
                                app:layout_constraintBottom_toTopOf="@id/tv_date"/>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_5">

                                <ImageView
                                    android:id="@+id/icon_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_calendar"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:tint="@color/grey_40" />

                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:text="@{move.date_creation}"
                                    tools:text="2021-10-21T16:31:19"
                                    android:textSize="@dimen/sp_15"
                                    android:paddingHorizontal="@dimen/dp_5"
                                    android:textColor="@color/grey_90"
                                    app:layout_constraintStart_toEndOf="@id/icon_2"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_products"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dp_5"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_50"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:layout_constraintTop_toBottomOf="@id/card_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Produits"
                            android:background="@color/colorPrimary"
                            android:drawablePadding="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:textSize="20sp"
                            app:drawableTint="@color/white"
                            app:drawableStartCompat="@drawable/ic_round_shopping_cart_24" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_products"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:listitem="@layout/item_move_details_shop"
                                android:background="@color/grey_10"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_products"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
