<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cart"
            type="com.israel.livraisonexpresspos.models.Cart" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/ivCart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/dp_8"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/ivCart"
            app:layout_constraintEnd_toStartOf="@id/layoutQuantity"
            app:layout_constraintStart_toEndOf="@id/ivCart"
            app:layout_constraintTop_toTopOf="@id/ivCart">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{cart.libelle}"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_90" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_4" />

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cart.montant_total + ` FCFA`}"
                    tools:text="1000 FCFA"
                    android:textColor="@color/grey_80" />
                <View
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_edit_24"
                    android:id="@+id/ivEditPrice"
                    app:tint="@color/grey_60"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivCart"
            app:layout_constraintBottom_toBottomOf="@id/ivCart"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:orientation="horizontal"
            android:id="@+id/layoutQuantity">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_round_add_box_24"
                app:tint="@color/colorAccent"
                android:id="@+id/ivAdd"/>
            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:minWidth="@dimen/dp_20"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(cart.quantite)}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/grey_90"
                android:id="@+id/tvQuantity"/>
            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="0dp"/>
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_remove_box_24"
                app:tint="@color/colorAccent"
                android:id="@+id/ivRemove"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/ic_round_delete_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCart" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginHorizontal="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/ivDelete"
            android:background="@color/overlay_dark_10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>