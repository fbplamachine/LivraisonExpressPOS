<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="shop"
            type="com.israel.livraisonexpresspos.models.Shop" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/shopItem"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/bg_magasin_back">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/ivShop"
                    android:foreground="@drawable/bg_image_magasin_fore"
                    tools:targetApi="m" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/overlay_dark_70"
                    android:paddingStart="@dimen/dp_10"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:id="@+id/lyt_preorder"
                    android:layout_below="@id/tvShopName"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fermé"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Précommander"
                        android:textColor="@color/white"
                        android:id="@+id/buttonPreOrder" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@={shop.nom}"
                    android:transitionName="testTransition"
                    android:textColor="@color/white"
                    android:id="@+id/tvShopName" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>