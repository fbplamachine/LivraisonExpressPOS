<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <import type="com.israel.livraisonexpresspos.ui.order_detail.sender.SenderFragment"/>
        <variable
            name="contact"
            type="com.israel.livraisonexpresspos.models.from_steed_app.Client" />
        <variable
            name="address"
            type="com.israel.livraisonexpresspos.models.Address" />
        <variable
            name="duration"
            type="java.lang.String" />
        <variable
            name="distance"
            type="java.lang.String" />
        <variable
            name="userType"
            type="String"/>
        <variable
            name="user"
            type="com.israel.livraisonexpresspos.models.User" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/grey_5"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Contacts"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/row_contact_nom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="@{contact.fullname == null || contact.fullname.empty ? View.GONE : View.VISIBLE}"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_person_black_24"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_nom"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@{contact.fullname ?? ``}"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_contact_nom_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="@{contact.fullname == null || contact.fullname.empty ? View.GONE : View.VISIBLE}"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_contact_telephone_sender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="@{contact.telephone == null || contact.telephone.empty ? View.GONE : View.VISIBLE}"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_phone"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_telephone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:text="@{contact.telephone ?? ``}"
                                    android:textColor="@color/grey_90" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/phone_call"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dp_2"
                                    android:background="@color/separator_grey"
                                    android:elevation="@dimen/dp_2"
                                    android:padding="@dimen/dp_5"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@color/grey_20"
                                        android:padding="@dimen/dp_5"
                                        android:src="@drawable/ic_baseline_phone_forwarded_24"
                                        app:tint="@color/grey_90" />

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/phone_message"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dp_2"
                                    android:background="@color/separator_grey"
                                    android:elevation="@dimen/dp_2"
                                    android:padding="@dimen/dp_5"
                                    android:visibility="@{TextUtils.equals(SenderFragment.USER_TYPE, userType) ? View.GONE : View.VISIBLE}"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@color/grey_20"
                                        android:padding="@dimen/dp_5"
                                        android:src="@drawable/ic_baseline_message_24"
                                        app:tint="@color/grey_90" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <View
                                android:id="@+id/row_contact_telephone_sender_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="@{contact.telephone == null || contact.telephone.empty ? View.GONE : View.VISIBLE}"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_contact_telephone_sender2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10"
                                android:visibility="@{contact.telephone_alt == null || contact.telephone_alt.empty ? View.GONE : View.VISIBLE}">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_phone"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_telephone2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:text="@{contact.telephone_alt ?? ``}"
                                    android:textColor="@color/grey_90" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/phone2_call"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dp_2"
                                    android:background="@color/separator_grey"
                                    android:elevation="@dimen/dp_2"
                                    android:padding="@dimen/dp_5"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@color/grey_20"
                                        android:padding="@dimen/dp_5"
                                        android:src="@drawable/ic_baseline_phone_forwarded_24"
                                        app:tint="@color/grey_90" />

                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/phone2_message"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dp_2"
                                    android:background="@color/separator_grey"
                                    android:elevation="@dimen/dp_2"
                                    android:padding="@dimen/dp_5"
                                    android:visibility="@{TextUtils.equals(SenderFragment.USER_TYPE, userType) ? View.GONE : View.VISIBLE}"
                                    app:cardCornerRadius="@dimen/dp_5">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@color/grey_20"
                                        android:padding="@dimen/dp_5"
                                        android:src="@drawable/ic_baseline_message_24"
                                        app:tint="@color/grey_90" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/white"
                    android:id="@+id/cvAddress"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="@dimen/dp_3">

                    <LinearLayout
                        android:id="@+id/block_adresse_sender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:background="@color/colorPrimary"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAlert"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_round_warning_24"
                                app:tint="@color/error_red" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Adresse "
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />
                            <ImageView
                                android:id="@+id/ivAdd_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_round_add_24" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/row_adresses_sender_quartier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_location_city_black_24dp"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_quartier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_adresses_sender_quartier_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_adresses_sender_adresse"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_address"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_adresse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_adresses_sender_adresse_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_adresses_sender_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <ImageView
                                    android:layout_width="@dimen/dp_24"
                                    android:layout_height="@dimen/dp_24"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_address"
                                    app:tint="@color/order_detail_icon_tint" />

                                <TextView
                                    android:id="@+id/tv_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                app:srcCompat="@drawable/ic_round_location_city_24"
                                app:tint="@color/grey_60" />

                            <View
                                android:layout_width="@dimen/dp_10"
                                android:layout_height="0dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{address.quartier ?? address.titre ?? ``}"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_5" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{address.description ?? ``}"/>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/ivMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_round_more_vert_24"
                                app:tint="@color/grey_60" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bloc_more_adress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="@dimen/dp_5"
                                android:text="@string/other_addresses"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/sp_16" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_bloc_adress_receiver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:scrollbars="none" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonSeeMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dp_8"
                                android:text="@string/see_more"
                                app:icon="@drawable/ic_round_add_24" />

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_gravity="center_vertical"
                                android:indeterminateTint="@color/colorAccent"
                                android:visibility="gone" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/more_adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:elevation="@dimen/dp_2"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="@dimen/dp_2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_5">

                                <androidx.coordinatorlayout.widget.CoordinatorLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:animateLayoutChanges="true">

                                    <ImageView
                                        android:id="@+id/img_ic_more"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@drawable/ic_add"
                                        android:visibility="visible"
                                        app:tint="@color/white" />

                                    <ImageView
                                        android:id="@+id/img_ic_less"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:src="@drawable/ic_round_remove_24"
                                        android:visibility="visible"
                                        app:tint="@color/white" />

                                    <ProgressBar
                                        android:id="@+id/progress_bar"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_gravity="center"
                                        android:progressTint="@color/white"
                                        android:visibility="invisible" />

                                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                                <TextView
                                    android:id="@+id/tv_card_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/dp_5"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/internal_contact_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="Note interne du contact "
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <TextView
                            android:id="@+id/tv_internal_contact_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_10"
                            android:textColor="@color/grey_90"
                            tools:text="Je ne sais pas trop ce que les gars peuvent vouloir dire ici dedans mais bon on met quand-même..." />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp_5"
                    android:id="@+id/cvGeo"
                    app:cardElevation="@dimen/dp_3">

                    <LinearLayout
                        android:id="@+id/block_geolocalisation_sender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:background="@color/colorPrimary"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dp_10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Géolocalisation"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:id="@+id/ivLocate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_baseline_location_searching_24"
                                app:tint="@color/white" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/row_location_sender_distance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:text="@{TextUtils.isEmpty(distance) ? `Distance : non déterminée` : `Distance : `+distance}"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:id="@+id/row_location_sender_distance_divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                            <LinearLayout
                                android:id="@+id/row_location_sender_chrono"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/tv_chrono"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:text="@{TextUtils.isEmpty(duration) ? `Durée : non déterminée` : `Durée : `+duration}"
                                    android:textColor="@color/grey_90" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/separator_grey" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>


